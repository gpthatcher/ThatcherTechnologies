---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Computers",
    subTitle:
      "Whether your computer is running slow, has hardware issues, or needs a complete overhaul, our expert technicians provide diagnostic, repair, and upgrade services to keep your system running smoothly. From motherboard replacements to data recovery, weâ€™ve got you covered.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Technician diagnosing a computer motherboard issue.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working on a computer repair at a desk.",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Arcade Machines",
    subTitle:
      "Specializing in both vintage and modern arcade machines, we offer repair services that cover everything from CRT monitor adjustments to circuit board restoration. Get your machine back to perfect working order with our precise and reliable repair services.",
    img: beforeAfter,
    imgAlt: "Arcade machine before and after repairs.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Consoles",
    subTitle:
      "Game consoles face unique challenges, from overheating issues to controller malfunctions. We provide comprehensive repair services, including reflowing, power supply replacement, and internal component fixes, ensuring your console is ready for action.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Technician working on console internal components.",
    imgTwo: aerialView,
    imgTwoAlt: "Overview of different consoles being repaired.",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Controllers",
    subTitle:
      "Your gaming experience depends on precise control. Whether it's joystick drift, unresponsive buttons, or connectivity issues, our controller repair services will bring your devices back to life with full functionality.",
    img: usingTools,
    imgAlt:
      "Technician disassembling a gaming controller for repairs.",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Other Electronics",
    subTitle:
      "From televisions to audio equipment and home appliances, we repair a wide variety of electronics. Our technicians have the expertise to diagnose and fix issues with power, display, audio, and more, ensuring your devices are performing at their best.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In-progress repair of home electronics.",
    imgTwo: underConstruction,
    imgTwoAlt: "Technician working on an electronic appliance repair.",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://thatchertechnologies.uk/services",
    "url": "https://thatchertechnologies.uk/services",
    "name": "Expert Consultation Services | ThatcherTechnologies",
    "description": "Runs electricity? We'll fix it, Thatcher Technologies delivers exceptional service and comprehensive solutions in electronics repair, from diagnosis to full restoration.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://thatchertechnologies.uk",
        "name": "ThatcherTechnologies",
        "description": "ThatcherTechnologies offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Runs Electricity? We'll Fix It"
    subTitle="At ThatcherTechnologies, we take pride in providing comprehensive solutions and exceptional service in the electronics repair industry. Our experienced team is dedicated to supporting your devices from diagnosis to repair, offering a wide range of specialized services to ensure your electronics function at their best."
    btnExists={true}
    btnTitle="Schedule a Repair"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/*
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ThatcherTechnologies, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ThatcherTechnologies as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
  */}
</MainLayout>
